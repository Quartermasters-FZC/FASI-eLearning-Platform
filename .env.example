# =================================================================
# FASI ELEARNING PLATFORM - ENVIRONMENT CONFIGURATION
# Copy this file to .env and update values for your environment
# =================================================================

# =================================================================
# ENVIRONMENT SETTINGS
# =================================================================
NODE_ENV=development
ENV=development
DEBUG=true
LOG_LEVEL=info

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
PROJECT_NAME=fasi-elearning
ENVIRONMENT=development
DOMAIN_NAME=localhost

# Frontend Configuration
FRONTEND_URL=http://localhost:3100
API_URL=http://localhost:3000

# Backend Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
CONTENT_SERVICE_PORT=3003

# AI Service Ports
SPEECH_SERVICE_PORT=8001
NLP_SERVICE_PORT=8002
TRANSLATION_SERVICE_PORT=8003

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://fasi_user:your_password@localhost:5432/fasi_elearning
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=fasi_elearning
DATABASE_USER=fasi_user
DATABASE_PASSWORD=your_password

# =================================================================
# REDIS CONFIGURATION
# =================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=3600000

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
CRYPTO_ALGORITHM=aes-256-gcm

# =================================================================
# AWS CONFIGURATION
# =================================================================

# AWS Credentials (use IAM roles in production)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration
AI_MODELS_BUCKET=fasi-elearning-ai-models-dev
CONTENT_BUCKET=fasi-elearning-content-dev
BACKUPS_BUCKET=fasi-elearning-backups-dev

# =================================================================
# AI/ML SERVICES CONFIGURATION
# =================================================================

# Model Storage
MODEL_CACHE_DIR=./models_cache
MODEL_DOWNLOAD_TIMEOUT=300
MODEL_CACHE_SIZE=10GB

# Speech Recognition
SPEECH_MODEL_TYPE=whisper
SPEECH_MODEL_SIZE=base
SPEECH_ENABLE_GPU=false
SPEECH_BATCH_SIZE=8

# NLP Service
NLP_MODEL_NAME=bert-base-multilingual-cased
NLP_MAX_SEQUENCE_LENGTH=512

# Translation Service
TRANSLATION_MODEL_TYPE=marian
TRANSLATION_BATCH_SIZE=16
TRANSLATION_ENABLE_QUALITY_ESTIMATION=true

# =================================================================
# MONITORING & OBSERVABILITY
# =================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6832

# =================================================================
# FEATURE FLAGS
# =================================================================

# AI Features
ENABLE_SPEECH_RECOGNITION=true
ENABLE_NLP_ANALYSIS=true
ENABLE_TRANSLATION=true
ENABLE_PRONUNCIATION_SCORING=true

# Application Features
ENABLE_USER_REGISTRATION=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true

# =================================================================
# LOCALIZATION
# =================================================================

# Default Language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ur,ar,es,fr,de,zh,ja,ko,ru

# Timezone
DEFAULT_TIMEZONE=UTC

# =================================================================
# NOTES
# =================================================================

# 1. Never commit this file with real secrets to version control
# 2. Use AWS IAM roles instead of access keys in production
# 3. Enable SSL/TLS for all external connections in production
# 4. Use strong, unique passwords for all services
# 5. Regularly rotate secrets and API keys